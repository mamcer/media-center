<Window x:Class="MediaHost.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Media Host" Height="350" Width="466" WindowStartupLocation="CenterScreen">
    <Grid>
        <ScrollViewer Margin="10,47,10,10">
            <TextBox x:Name="txtLog" TextWrapping="Wrap" />
        </ScrollViewer>
        <Button x:Name="btnConnect" Content="Connect" HorizontalAlignment="Left" Margin="373,11,0,0" VerticalAlignment="Top" Width="75" Click="btnConnect_Click"/>
        <ComboBox x:Name="cmbGroupName" HorizontalAlignment="Left" Margin="10,11,0,0" VerticalAlignment="Top" Width="358">
            <ComboBoxItem Content="XBMC" Selector.IsSelected="True"/>
        </ComboBox>
    </Grid>
</Window>
